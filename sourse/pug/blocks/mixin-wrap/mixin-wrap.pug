mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="0" min="0" max="4" readonly inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти" inputmode='search')
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin stepsRow(...items)
	+b.steps
		+e.dd-header.d-lg-none
			+e.dd-name Запись на оценку #[span с 12 дек по 20 дек]
			+e.dd-counter 4/#[span 6]
			+e.dd-btn: +icon('more')
		+e.list.UL
			for item in items
				+e.item(class= `steps__item--${item.class}`)
					+e.item-name(href="#" disabled= disabled)= item.name
						span= item.date